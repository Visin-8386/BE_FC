@model BeeFC.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
}
<h2>@ViewData["Title"]</h2>
<div>
    <h4>Bạn có chắc chắn muốn xóa sản phẩm này?</h4>
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" style="max-width: 180px;" />
            }
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Tên</dt>
                <dd class="col-sm-8">@Model.Name</dd>
                <dt class="col-sm-4">Giá</dt>
                <dd class="col-sm-8">@Model.Price.ToString("N0") ₫</dd>
                <dt class="col-sm-4">Mô tả</dt>
                <dd class="col-sm-8">@Model.Description</dd>
                <dt class="col-sm-4">Loại</dt>
                <dd class="col-sm-8">@ViewBag.CategoryName</dd>
            </dl>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>
